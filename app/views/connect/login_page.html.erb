<!DOCTYPE html>
<html lang="en">
  <head>

    <title>Signin</title>

    <!-- Bootstrap core CSS -->
    <%= stylesheet_link_tag "bootstrap.min" %>

    <!-- Custom styles for this template -->
    <%= stylesheet_link_tag "signin" %>

  </head>

  <body>

    <div class="container form-signin" style="margin-top:70px; background:#FFFFFF; box-shadow:0px 0px 10px #666666; border:1px solid #CCCCCC;">   
      <%= form_for(:user, :url => {:action => "login_attempt"}) do |f|  %>
       
        <h2 class="form-signin-heading">Sign in </h2>
        <div class="line"> </div>
        <%= f.text_field(:username, :size =>25, :maxlength=> 25, :placeholder => "Username", :class => 'form-control')%>
        <br>
        <%= f.password_field(:password, :size => 25, :maxlength=>25, :placeholder => "Password", :class => 'form-control' )%>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <%= submit_tag("Login", :class => 'btn btn-lg btn-success btn-block') %>
      <% end %>


    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
  </body>
</html>
